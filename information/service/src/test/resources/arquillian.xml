<?xml version="1.0"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://jboss.org/schema/arquillian"
  xsi:schemaLocation="http://jboss.org/schema/arquillian
  http://jboss.org/schema/arquillian/arquillian_1_0.xsd">
  <defaultProtocol type="Servlet 3.0" />
  <engine>
        <property name="deploymentExportPath">target/deployments</property>
    </engine>
  <container qualifier="weblogic">
    <configuration>
      <property name="wlHome">${wls.home}</property>
      <property name="adminUrl">t3://${wls.host}:${wls.port}</property>
      <property name="adminUserName">${wls.adminUserName}</property>
      <property name="adminPassword">${wls.adminPassword}</property>
      <property name="target">${wls.target}</property>
    </configuration>
  </container>
  <container qualifier="wildfly-remote">
    <configuration>
      <property name="managementAddress">${wf.host}</property>
      <property name="managementPort">${wf.mgtport}</property>
      <property name="username">${wf.adminUserName}</property>
      <property name="password">${wf.adminPassword}</property>
    </configuration>
    <protocol type="Servlet 3.0">
      <property name="host">${wf.host}</property>
      <property name="port">${wf.port}</property>
    </protocol>
  </container>
</arquillian>
